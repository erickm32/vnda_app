<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Token</th>
      <th>Remote Id</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.url %></td>
        <td><%= shop.token %></td>
        <td><%= shop.remote_id %></td>

        <td><%= link_to 'Show', shop, class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop), class: 'btn btn-primary btn-sm' %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path, class: 'btn btn-outline-primary' %>
